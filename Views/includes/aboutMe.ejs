<div class="card mb-3 aboutMe" style="margin-top: 30px; border: 2px dotted red">
  <h4 class="card-title">About me</h4>
  <div class="row g-0">
    <div class="col-md-6">
      <div class="card mb-3 mt-3">
        <img
          src="<%=author.avatar%>"
          class="card-img-top"
          alt="author image"
        />
      </div>
    </div>
    <div class="col-md-6">
      <div class="card-body authorTitle d-flex" style="display: flex; flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100%;">
        <h5 class="card-title">
          <%= author.firstName%> &nbsp;
          <%= author.lastName%>
        </h5>
        <p class="card-text">
          <small class="text-body-secondary">
            <%=author.slogan%>
          </small>
        </p>
      </div>
    </div>
  </div>
  <div class="mb-5">
    <% author.aboutMe.map((el) => { %>
    <div class="aboutMeContainer" style="width: 100%;
    margin: 16px initial">
      <% if (el.type === 'text') { %>
        <div><%= el.value %></div>
      <% } else if (el.type === 'image') { %>
        <div class="container text-center mt-5 mb-5">
          <div class="row">
            <% el.value.map((details) => { %>
              <div class="col-sm-6 col-md-4 m-auto">
                <img
                  src="<%= details.thumbnail %>"
                  class="img-fluid rounded-start"
                  alt="image"
                />
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>
    </div>
    <% }) %>
  </div>
  
</div>
